{% extends "base.html.twig" %}

{% block header %}Regiões{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>{{message}}</strong>
        </div>
    {% endfor %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Clima</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for r in regioes %}
                <tr>
                    <td>{{r.id}}</td>
                    <td>{{r.nome}}</td>
                    <td>{{r.clima}}</td>
                    <td>
                        <a href="{{path('atualizarRegiao', {'id': r.id})}}">Alterar</a>
                        | <a href="{{path('deletarRegiao', {'id': r.id})}}">Excluir</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Nenhuma região cadastrada.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div>
        <a class="btn btn-primary" href="{{path('criarRegiao')}}">Novo</a>
    </div>
{% endblock %}

