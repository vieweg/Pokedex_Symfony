{% extends "base.html.twig" %}

{% block header %}
    {% if pokemon is defined %} {{pokemon.nome}} {% else %} Novo Pok√©mon {% endif %}
{% endblock %}

{% block body %}
    {{form_start(form)}}
       {% if not form.vars.valid %}
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ form_errors(form) }}
            </div>
        {% endif %}
        <div class="row">
            <div class="form-group col-lg-6">
                {{form_label(form.nome)}}
                {{form_widget(form.nome, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                {{form_label(form.numero)}}
                {{form_widget(form.numero, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                {{form_label(form.descricao)}}
                {{form_widget(form.descricao, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                {{form_label(form.tipo)}}
                {{form_widget(form.tipo, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                {{form_label(form.regiao)}}
                {{form_widget(form.regiao, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                {{form_label(form.arquivoImagem)}}
                {% if pokemon is defined and pokemon.imagem %}
                    <br />
                    <img style="height: 64px; width: 64px;" src="{{asset("uploads/#{pokemon.imagem}")}}" />
                {% endif %}
                {{form_widget(form.arquivoImagem, {'attr': {'class': 'form-control'} })}}
            </div>
        </div>
        <div class="form-group">
            {{form_widget(form.btnSalvar, {'attr': {'class': 'btn btn-primary'} })}}
        </div>
    {{form_end(form)}}
    <br/>
    <div>
        <a href="{{path('listarPokemons')}}">Voltar</a>
    </div>
{% endblock %}
